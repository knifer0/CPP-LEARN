#include <iostream>
#include <time.h>
#include <cstdlib>
using std::cout;
using std::cin;
using std::endl;
using std::string;
int main(void){
	float *tab = new float [5];
	float suma=0;
	cout << "Podaj 5 liczb" << endl;
	for(int i=0; i<5; i++) {
		cin >> *(tab+i);
		suma+=*(tab+i);
	}
	float srednia = suma/(float)5;
	
	float szukana=*tab;
	float pomocnicze[5];
	int licznik =0;
	float roznica;
	if(*tab - srednia > 0)
		roznica = *tab - srednia;
	else
		roznica = srednia - *tab;
	
	cout << endl << "Srednia: "<< srednia<<endl;
	for(int i=1; i<5; i++){
		if((srednia -*(tab+i) < roznica) && (srednia -*(tab+i) >0)){
			szukana = *(tab+i);
			roznica = srednia - *(tab+i);
		}
		else if(*(tab+i) - srednia< roznica && *(tab+i) - srednia>0){
			szukana = *(tab+i);
			roznica = *(tab+i)-srednia;
		}
		else if(srednia - *(tab+i) == roznica || *(tab+i) -srednia == roznica){
			pomocnicze[licznik] = tab[i];
			licznik++;
		}
	}
	cout << pomocnicze[licznik-1] << endl << roznica ;
	if(pomocnicze[licznik-1]-srednia == szukana-srednia ){
		cout << "Liczy najblizsze sredniej to:";
		for(int i=0; i<=licznik; i++)
			cout << pomocnicze[i] << " ";
		cout << "i " << szukana;
	}
	else
	
	cout << "Liczba najblizsza sredniej: "<< szukana;
	delete [] tab;
	return 0;
}
